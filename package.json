{
  "name": "intuision",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client:dev": "yarn workspace client dev",
    "client:build": "yarn workspace client build",
    "client:lint": "yarn workspace client lint",
    "client:preview": "yarn workspace client preview",
    "server:dev": "yarn workspace server dev",
    "server:build": "yarn workspace server build",
    "server:start": "yarn workspace server start",
    "dev": "concurrently \"yarn client:dev\" \"yarn server:dev\"",
    "build": "yarn client:build && yarn server:build",
    "format": "yarn prettier --write \"**/*.{js,ts,jsx,tsx,json}\""
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "prettier": "^3.3.1"
  }
}
